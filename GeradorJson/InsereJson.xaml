<Page x:Class="GeradorJson.InsereJson"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:GeradorJson"
      mc:Ignorable="d"
      d:DesignHeight="450" d:DesignWidth="800"
      Title="InsereJson" Width="700" Height="Auto">

    <StackPanel Margin="10">

        <ComboBox Name="combo" Width="120" HorizontalAlignment="Right" Margin="10">
            <ComboBoxItem IsSelected="True" Content="Daemon" HorizontalAlignment="Left" Width="118"/>
            <ComboBoxItem Content="Outro" HorizontalAlignment="Left" Width="118"/>
        </ComboBox>

        <Label   Content="Prefixo" />
        <TextBox  Name="prefixo"  Margin="10" />

        <Label   Content="Imagem" />
        <TextBox Name="imagem" Margin="10" />

        <Label   Content="Json" />
        <TextBox AcceptsReturn="True" Name="jsonEnv"   TextWrapping="Wrap" Height="200" Margin="10" />

        <Button Click="Button_Click" Content="Gerar" Margin="10" />
    </StackPanel>
</Page>